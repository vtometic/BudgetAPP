<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundcolor"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".KreiranjeFragment">

    <RelativeLayout
        android:id="@+id/plan_zaglavlje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/timeSelectors"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0"
        >
        <RelativeLayout
            android:id="@+id/prvi"
            android:background="?attr/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/natrag"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_nav_back"/>

            <TextView
                android:id="@+id/naslov"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:text="Planiranje"
                android:textColor="?attr/colorPrimaryDark"
                android:fontFamily="@font/playfair_display"
                android:layout_toLeftOf="@id/ic"
                android:layout_toEndOf="@id/natrag"
                android:textSize="40sp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/ic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/circlebackground"
                android:src="@drawable/ic_create_plan"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:elevation="5dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@id/prvi"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/waves">
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/timeSelectors"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/plan_zaglavlje"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/totalPlan"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0"
        >

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/dateTabsPlans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/backgroundcolor"
            android:foregroundTint="?attr/colorPrimaryDark"
            app:tabBackground="?attr/backgroundcolor"
            app:tabIconTint="@color/colorPrimaryDark"
            app:tabIndicatorColor="?attr/colorAccent"
            app:tabRippleColor="?attr/colorAccent"
            app:tabSelectedTextColor="?attr/colorAccent"
            app:tabTextColor="?attr/colorPrimaryDark">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tjedni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foregroundTint="#4CAF50"
                android:text="Tjedni" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/mjesecni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mjesečni" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/godisnji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Godišnji" />
        </com.google.android.material.tabs.TabLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/datePickerPlan"
            android:layout_below="@id/dateTabsPlans"
            android:textColor="?attr/colorPrimaryDark"
            android:layout_margin="5dp"
            app:helperText="Odaberite razdoblje"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="?attr/colorAccent"
            app:helperTextTextColor="?attr/colorPrimaryDark"
            app:errorEnabled="true"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/ic_date_picker"
            app:endIconTint="?attr/colorPrimaryDark">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:clickable="true"
                android:focusable="false"
                android:text="Razdoblje"
                android:textColor="?attr/colorPrimaryDark"
                android:fontFamily="@font/playfair_display"
                android:id="@+id/input"
                />
        </com.google.android.material.textfield.TextInputLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/totalPlan"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/timeSelectors"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/planRecycler"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <TextView
                android:id="@+id/iznosPlan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:layout_marginEnd="5dp"
                android:textColor="?attr/colorPrimaryDark"
                android:fontFamily="@font/playfair_display"
                android:textSize="20sp"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/valutaPlan"
                android:layout_toEndOf="@id/iznosPlan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" kn"
                android:layout_centerVertical="true"
                android:textColor="?attr/colorPrimaryDark"
                android:fontFamily="@font/playfair_display"
                android:textSize="20sp"
                android:textAlignment="center"/>
        </RelativeLayout>
        <ImageButton
            android:id="@+id/addPrihod"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_add_prihod"
            android:layout_alignParentStart="true"
            android:elevation="5dp"
            android:background="@drawable/circlebackgroudgreen"/>

        <ImageButton
            android:id="@+id/addTrosak"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_add_trosak"
            android:layout_alignParentEnd="true"
            android:elevation="5dp"
            android:background="@drawable/circlebackgroundred"/>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/planRecycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="?attr/backgroundcolor"
        android:padding="5dp"
        app:layout_constraintBottom_toTopOf="@id/planComands"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/totalPlan"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintVertical_chainStyle="packed"/>

    <RelativeLayout
        android:id="@+id/planComands"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/spinner_background"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/planRecycler"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintVertical_chainStyle="packed">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/OdbaciPlan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Odbaci"
            android:textSize="20sp"
            android:elevation="10dp"
            android:fontFamily="@font/playfair_display"
            android:textColor="?attr/colorPrimaryDark"
            android:layout_margin="5dp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/zakljuciPlan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zaključi"
            android:textSize="20sp"
            android:elevation="10dp"
            android:fontFamily="@font/playfair_display"
            android:textColor="?attr/colorPrimaryDark"
            android:layout_margin="5dp"
            android:layout_toEndOf="@id/OdbaciPlan"/>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>